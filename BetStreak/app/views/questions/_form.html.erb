<%= form_tag :question, :action => "update", do |f| %>
  <%= hidden_field :id, value: f.id %>
  <%= label_tag(:answer, "Yes") %>
  <%= radio_button_tag(:answer, "Yes") %>
  <%= label_tag(:answer, "No") %>
  <%= radio_button_tag(:answer, "No") %>
  <%= submit_tag("Submit", method: :update) %>
<% end %>
